<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RSR</title>
    <link rel="stylesheet" href="~/Content/animate.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar" style="background-color:#428bca; border-color:#428bca">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Content/Images/home/logoWhite.png" width="50" style="margin-right:15px; margin-left:15px;" />
                </a>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { style = "color: #ffffff" })</li>
                    <li>@Html.ActionLink("Updates", "Updates", "Home", null, new { style = "color: #ffffff" })</li>
                    <li>@Html.ActionLink("Solutions", "Solutions", "Home", null, new { style = "color: #ffffff" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar" style="background-color:#428bca">
            <div style="text-align:center; padding-top:15px; color:#ffffff">
                @Html.ActionLink("Job Opportunities", "JobOpportunities", "Home", null, new { style = "color: #ffffff" }) |
                <a href="~/Legal/Index" style="color:#ffffff">&copy; @DateTime.Now.Year</a> |
                @Html.ActionLink(" ReadySetResource", "Index", "Home", null, new { style = "color: #ffffff" }) |
                @Html.ActionLink("Credits", "Credits", "Home", null, new { style = "color: #ffffff" }) |
                @Html.ActionLink("Site Map", "SiteMap", "Home", null, new { style = "color: #ffffff" }) |
                @Html.ActionLink("Donate!", "Donate", "Home", null, new { style = "color: #ffffff" })
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
