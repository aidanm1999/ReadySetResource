
@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
    ViewBag.Title = "Dashboard";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Dashboard</title>
    </head>
    <body id="Apps">
        <h2 style="text-align:center">Welcome, @User.Identity.Name</h2>
        <div class="row" style="text-align:center">
            <div class="col-md-4 animated fadeIn" style="animation-delay:0.2s" id="Rota">
                <img src="~/Content/Images/home/rota.png" style=" padding-top:10px; padding-bottom:10px; width:auto; display:block; margin-left:auto; margin-right:auto;">
                @Html.ActionLink("Start Rota", "Rota", "Dashboard", null, new { @class = "btn btn-primary" })
            </div>
            <div class="col-md-4 animated fadeIn" style="animation-delay:0.4s" id="Messages">
                <img src="~/Content/Images/home/messages.png" style=" padding-top:30px; padding-bottom:30px; width:auto; display:block; margin-left:auto; margin-right:auto;">
                @Html.ActionLink("Start Messages", "UnderConstruction", "Dashboard", null, new { @class = "btn btn-primary" })
            </div>
            <div class="col-md-4 animated fadeIn" style="animation-delay:0.6s" id="Meetings">
                <img src="~/Content/Images/home/meetings.png" style=" padding-top:22px; padding-bottom:20px; width:auto; display:block; margin-left:auto; margin-right:auto;">
                @Html.ActionLink("Start Meetings", "UnderConstruction", "Dashboard", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        <div class="row" style="text-align:center">
            <div class="col-md-4 animated fadeIn" style="animation-delay:0.8s" id="Ideas">
                <img src="~/Content/Images/home/ideas.png" style="padding-top:20px; padding-bottom:20px; width:auto; display:block; margin-left:auto; margin-right:auto;">
                @Html.ActionLink("Start Ideas", "UnderConstruction", "Dashboard", null, new { @class = "btn btn-primary" })
            </div>
            <div class="col-md-4 animated fadeIn" style="animation-delay:1.0s" id="Store">
                <img src="~/Content/Images/home/store.png" style=" padding-top:18px; padding-bottom:18px;width:auto; display:block; margin-left:auto; margin-right:auto;">
                @Html.ActionLink("Start Store", "UnderConstruction", "Dashboard", null, new { @class = "btn btn-primary" })
            </div>
            <div class="col-md-4 animated fadeIn" style="animation-delay:1.2s" id="Updates">
                <img src="~/Content/Images/home/update.png" style=" padding-top:22px; padding-bottom:22px;width:auto; display:block; margin-left:auto; margin-right:auto;">
                @Html.ActionLink("Start Updates", "UnderConstruction", "Dashboard", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </body>
</html>
