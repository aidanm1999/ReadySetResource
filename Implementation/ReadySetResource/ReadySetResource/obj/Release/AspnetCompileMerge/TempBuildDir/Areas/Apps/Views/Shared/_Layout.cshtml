<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RSR</title>
    <link rel="stylesheet" href="~/Content/animate.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar" style="background-color:#428bca; border-color:#428bca">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Request.Url.AbsolutePath.ToString() == "/Apps/Dashboard" | Request.Url.AbsolutePath.ToString() == "/Apps/Dashboard/Index")
                {
                    <a href="@Url.Action("Index", "Home", new { area = "" })">
                        <img src="~/Content/Images/home/logoWhite.png" width="50" style="margin-right:15px; margin-left:15px;" />
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Index", "Dashboard")">
                        <img src="~/Content/Images/home/logoWhite.png" width="50" style="margin-right:15px; margin-left:15px;" />
                    </a>
                }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
        <footer>
            @if (Request.Url.AbsolutePath.ToString() == "/Apps/Dashboard" | Request.Url.AbsolutePath.ToString() == "/Apps/Dashboard/Index")
            {@Html.Partial("_Partial")}
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
