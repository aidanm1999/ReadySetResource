@model DateTime
@{
    ViewBag.Title = "Export";
    Layout = "~/Areas/Apps/Views/Shared/_Layout.cshtml";
}



<style>
    form {
        margin: 0 auto;
        width: 260px;
    }
</style>
<body>
    <div class="row" style="padding-top:60px; padding-bottom:40px;">
        <div class="col-md-4 col-md-offset-4" style="text-align:center;">
            <h2 style="padding-bottom:20px">Export</h2>
            @Html.ActionLink("Download as PDF", "PDFDownload", "Calendar", new { week = Model }, new { @class = "btn btn-danger btn-block" })
            @Html.ActionLink("Print as PDF", "PDFPrint", "Calendar", new { week = Model }, new { @class = "btn btn-warning btn-block" })
            @Html.ActionLink("Save in Google Calendar", "ExportShifts", "GoogleAPI", new { area = "", week = Model }, new { style = "color: #ffffff", @class = "btn btn-primary btn-block" })
            <hr>
            Coming soon...
            @Html.ActionLink("Download as Excel", "", "", new { week = Model }, new { @class = "btn btn-success btn-block" })
        </div>
    </div>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}