@model ReadySetResource.ViewModels.Account.InviteViewModel

@{
    Layout = null;
}

<!DOCTYPE html>


<style>
    body, html {
        height: 100%;
        margin: 0;
    }

    .bg {
        /* The image used */
        background-image: url("../../Content/Images/home/ExtendedChairBG.png");
        /* Full height */
        height: 100%;
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    form {
        margin: 0 auto;
        width: 280px;
    }
</style>


<html>

<head>
    <title>Verify Email</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/animate.css">
</head>

<body class="bg" style="text-align:center; align-content:center;">
    <div style="border-color:black; border-width:thin;">

        <img style="width:200px" src="~/Content/Images/home/shortLogo.png" />

        <h1>Please enter temporary password</h1>

        <div class="row">
            <div class="text-center" style=" text-align:center;">
                @using (Html.BeginForm("InvitePost", "Account"))
                {
                    @Html.ValidationSummary(true, "The temporary password is incorrect, sorry.")
                    <h3 class="animated flash">
                        @Model.ErrorMsg
                    </h3>

                    <br />

                    @Html.PasswordFor(m => m.TempPass, new { @class = "form-control", placeholder = "Password is found on your email"})

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.NewUser.Id)
                    @Html.HiddenFor(m => m.NewUser.Email)

                    <br />

                    <button type="submit" class="btn btn-primary">Continue</button>
                }
            </div>

        </div>

    </div>
</body>
</html>
