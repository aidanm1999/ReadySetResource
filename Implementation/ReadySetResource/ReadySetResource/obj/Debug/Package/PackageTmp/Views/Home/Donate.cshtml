@model ReadySetResource.Models.ApplicationUser
@{
    ViewBag.Title = "A Huge Thanks!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="animated bounceInUp">
    <h2 style="padding-top:40px;">Thank You</h2>
    <div class="col-md-12">
        <p style="width:520px;">
            @if (User.Identity.IsAuthenticated)
            {
                <text>Dear</text> @Model.FirstName<text>,</text>;
            }
            else
            {
                <text>Dear Donor,</text>
            }
        </p>
        <p>
            I want to take the time to sincerely thank you for your donation to our mission.
        </br>
            As you know, we started this campaign to make people's work life easier and more productive,
        </br>
            and your contribution today helps us get one step closer to our goal.
        </p>
        <p style="padding-top:20px;">

            Thanks again for your generosity and support,
        </p>
        <p>
        The ReadySetResource Team!

        </p>
        <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top" style="align-self:center;">
            <input type="hidden" name="cmd" value="_s-xclick">
            <input type="hidden" name="hosted_button_id" value="4VKGB4M5RECWG">
            <input type="image" src="https://www.paypalobjects.com/en_GB/i/btn/btn_donate_LG.gif" border="0" name="submit" alt="PayPal – The safer, easier way to pay online!">
            <img alt="" border="0" src="https://www.paypalobjects.com/en_GB/i/scr/pixel.gif" width="1" height="1">
        </form>
    </div>
</div>