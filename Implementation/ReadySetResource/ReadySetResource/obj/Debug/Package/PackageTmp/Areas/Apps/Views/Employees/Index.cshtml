@model ReadySetResource.Areas.Apps.ViewModels.Employees.BusinessUserTypesViewModel
@{
    ViewBag.Title = "Employee Types";
    Layout = "~/Areas/Apps/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 100%;
        border-radius: 5px;
        overflow: hidden;
        border-radius: 10px 10px 10px 10px;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    img {
        border-radius: 10px 10px 0 0;
    }

    .container {
        padding: 2px 16px;
        border-radius: 10px 10px 0 0;
    }

    .center {
        margin: auto;
        width: 80%;
        padding: 10px;
    }
</style>


<h2>
    Employee Types
    @Html.ActionLink("Add Type", "AddType", null, new { @class = "btn btn-default", style = "float:right;" })
</h2>
@Model.ErrorMessage


<body>
    @foreach (var type in Model.BusinessUserTypes)
    {
        <a href="@Url.Action("Employees", new { type = type.Id })">

            <div class="col-md-3">
                <div class="center">
                    <div class="card" style="background-color:#@type.Colour;">
                        <div style="background-color:#@type.Colour; width:100%;height:40px;border-radius: 10px 10px 0 0;">
                        </div>
                        <div class="container" style="background-color:#F2F2F2;">
                            <h4><b style="white-space: nowrap;">@type.Name</b> </h4>
                            <p>

                                @Model.EmployeeCounts[count]

                                @if (@Model.EmployeeCounts[count] == 1)
                                {
                                    <text>Employee</text>
                                }
                                else
                                {
                                    <text>Employees</text>
                                }
                            </p>
                            <p>
                                @Html.ActionLink("Edit", "EditType", new { type = type.Id })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
        {
            count = count + 1;
        }
    }

</body>