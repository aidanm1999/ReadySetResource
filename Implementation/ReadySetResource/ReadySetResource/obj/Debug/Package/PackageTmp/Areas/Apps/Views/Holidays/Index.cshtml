@model ReadySetResource.ViewModels.HolidaysViewModel

@{
    ViewBag.Title = "Holidays";
    Layout = "~/Areas/Apps/Views/Shared/_HolidaysLayout.cshtml";
}

<style>


    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 100%;
        overflow: hidden;
        border-radius: 10px 10px 10px 10px;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    img {
        border-radius: 10px 10px 0 0;
    }

    .container {
        padding: 2px 16px;
    }

    .center {
        margin: auto;
        width: 90%;
        padding: 10px;
    }
</style>

<br>

@if (Model.AccessType.AccessType == "V")
{
    <a href="@Url.Action("Holiday")">
        <div class="col-md-6">
            <div class="center">
                <div class="card" style="background-color:#F2F2F2;">
                    <div style="background:url('https://maps.googleapis.com/maps/api/staticmap?center=220+Buchanan+St,Glasgow&zoom=13&size=600x200&maptype=roadmap&key=AIzaSyBeMqj8dnwp7BnS8DOWLVA0rJyT0yx_imo') no-repeat center; width:100%;height:200px;border-radius: 10px 10px 0 0;">
                    </div>
                    <div class="container" style="background-color:#F2F2F2;">
                        <h4><b style="white-space: nowrap;">Duration + Location</b> </h4>
                    </div>
                </div>
            </div>
        </div>
    </a>

}
else if (Model.AccessType.AccessType == "E")
{
    <div class="col-md-4">
        <h1>Pending</h1>
        <div style="overflow:auto; height:500px;">
            @foreach (var holiday in Model.Holidays)
            {
                if (holiday.Accepted == "Pending")
                {
                    <div class="center">
                        <div class="card" style="background-color:#F2F2F2;">
                            <div class="container" style="background-color:#F2F2F2;white-space: nowrap; margin-bottom:10px;">
                                <h4 style="height:30px;"><b>User Name</b></h4>
                                <p>@holiday.StartDateTime.Date @holiday.EndDateTime.Date</p>
                                @Html.ActionLink("Decline", "", "", null, new { @class = "btn btn-danger", style = "float:left;" }) @Html.ActionLink("Accept", "", "", null, new { @class = "btn btn-primary", style = "float:right;" })
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div class="col-md-4">
        <h1>Accepted</h1>
        <div style="overflow:auto; height:500px;">
            @foreach (var holiday in Model.Holidays)
            {
                if (holiday.Accepted == "Accepted")
                {
                    <div class="center">
                        <div class="card" style="background-color:#F2F2F2;">
                            <div class="container" style="background-color:#F2F2F2;white-space: nowrap; margin-bottom:10px;">
                                <h4 style="height:30px;"><b>User Name</b></h4>
                                <p>@holiday.StartDateTime.Date @holiday.EndDateTime.Date</p>
                                @Html.ActionLink("Decline", "", "", null, new { @class = "btn btn-danger", style = "float:left;" }) @Html.ActionLink("Accept", "", "", null, new { @class = "btn btn-primary", style = "float:right;" })
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div class="col-md-4">
        <h1>Declined</h1>
        <div style="overflow:auto; height:500px;">
            @foreach (var holiday in Model.Holidays)
            {
                if (holiday.Accepted == "Declined")
                {
                    <div class="center">
                        <div class="card" style="background-color:#F2F2F2;">
                            <div class="container" style="background-color:#F2F2F2;white-space: nowrap; margin-bottom:10px;">
                                <h4 style="height:30px;"><b>User Name</b></h4>
                                <p>@holiday.StartDateTime.ToShortDateString() @holiday.EndDateTime.Date</p>
                                @Html.ActionLink("Decline", "", "", null, new { @class = "btn btn-danger", style = "float:left;" }) @Html.ActionLink("Accept", "", "", null, new { @class = "btn btn-primary", style = "float:right;" })
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
}




<div class="container">
    <div class="row">
        <div class='col-sm-6'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>
    </div>
</div>