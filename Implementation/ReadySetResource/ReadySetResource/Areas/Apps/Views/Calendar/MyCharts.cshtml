@model ReadySetResource.Areas.Apps.ViewModels.Calendar.MyChartsViewModel
@{
    ViewBag.Title = "Charts";
    Layout = "~/Areas/Apps/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Chart.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<h2>My Charts</h2>

<div class="col-md-12" style="height:260px;border-color:black; border-width:4px;">
    <div class="col-md-6">
        <canvas id="doughnut-chart"></canvas>
    </div>
    <div class="col-md-6" style="text-align:center; font-family:Tahoma;">
        <div style="font-size:84px">

            @if(Model.UpOrDownHours < 0)
            {
                <div style="color:red">
                    @Math.Round(Model.UpOrDownHours, 2) h
                </div>
            }
            else
            {
                <div style="color:green">
                    + @Math.Round(Model.UpOrDownHours, 2) h
                </div>
            }

        </div>
        <span>
            Last Week: @Math.Round(Model.UpOrDownLastHours, 2) h |
            This Week: @Math.Round(Model.UpOrDownThisHours, 2) h
        </span>
    </div>
</div>

<div id="chart_container">
    <canvas id="line-chart" height="80"></canvas>


    <script>

        

        new Chart(document.getElementById("line-chart"), {
            type: 'line',
            data: {
                labels: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
                datasets: [{
                    data: @Model.LineUserHoursJson,
                    label: "Your Hours",
                    borderColor: "#3e95cd",
                    fill: false
                }, {
                    data: @Model.LineAverageHoursJson,
                    label: "Average Hours",
                    borderColor: "#8e5ea2",
                    fill: false
                }
                ]
            },
            options: {
                height: 2000,
                title: {
                    display: true,
                    
                    text: 'Hours Per Day'
                }
            }
        });

        var userNames = @Html.Raw(Json.Encode(Model.DoughnutUserNames));


        console.log(userNames);

        new Chart(document.getElementById("doughnut-chart"), {
            type: 'doughnut',
            data: {
                labels: userNames,
                datasets: [
                    {
                        label: "People's hour worked",
                        backgroundColor: ["#3e95cd", "#8e5ea2", "#3cba9f", "#e8c3b9", "#c45850"],
                        data: @Model.DoughnutHoursWorkedJson,
                    }
                ]
            },
            options: {
                title: {
                    display: true,
                    text: 'Hours worked/person',
                }
            }
        });


    </script>
</div>

